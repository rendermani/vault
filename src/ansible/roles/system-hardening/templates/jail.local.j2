# Fail2ban configuration for Phase 1 Bootstrap
# Basic SSH protection

[DEFAULT]
ignoreip = 127.0.0.1/8 ::1 10.0.0.0/8
bantime = 600
findtime = 600
maxretry = 3
backend = systemd

[sshd]
enabled = true
port = {{ ssh_port }}
filter = sshd
logpath = %(sshd_log)s
maxretry = {{ ssh_max_auth_tries }}
banaction = ufw